{
  "name": "ipmas-system",
  "version": "1.0.0",
  "description": "IPMAS - Integrated Poverty Mapping & Analysis System",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "build:all": "npm run build && cd backend && npm install",
    "start": "cd backend && npm start",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules",
    "setup": "npm run install:all && npm run build"
  },
  "keywords": [
    "poverty",
    "mapping",
    "analytics",
    "full-stack",
    "nodejs",
    "express",
    "leaflet"
  ],
  "author": "IPMAS Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}