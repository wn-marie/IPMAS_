{
  "name": "ipmas-backend",
  "version": "1.0.0",
  "description": "IPMAS Backend API - Integrated Poverty Mapping & Analysis System",
  "main": "src/app.js",
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=1024 src/app.js",
    "start:optimized": "node --expose-gc --max-old-space-size=2048 src/app.js",
    "dev": "nodemon --exec node --expose-gc --max-old-space-size=1024 src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "poverty",
    "mapping",
    "analytics",
    "api",
    "nodejs",
    "express"
  ],
  "author": "IPMAS Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "puppeteer": "^21.11.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "uuid": "^8.3.2",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0 <=20.0.0",
    "npm": ">=8.0.0"
  }
}
